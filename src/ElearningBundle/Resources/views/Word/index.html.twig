{% extends '::base.html.twig' %}

{% block body %}
    <h1>Word list</h1>
    <div class="row">
        <div class="col-md-6">
            <table class="records_list table table-responsive ">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Content</th>
                </tr>
                </thead>
                <tbody>
                {% for word in words %}
                    <tr>
                        <td>{{ word.id }}</td>
                        <td>{{ word.content }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    {% endblock %}
